{
    "exclude": "(^node_modules/|^datahub/migrations/)",
    "linters": {
        "prettier": {
            "type": "prettier",
            "include": "(\\.tsx?$)",
            "bin": "./node_modules/.bin/prettier",
            "prettier.cwd": "datahub/webapp"
        },
        "flake8": {
            "type": "flake8ext",
            "include": "(\\.py$)",
            "flake8.python": "> 3.5"
        },
        "python-imports": {
            "type": "python-imports",
            "python-imports.pattern": "(mock)",
            "include": "(\\.py$)",
            "exclude": "(^tests/)"
        },
        "ts": {
            "type": "tslint",
            "include": "(datahub/webapp/.*\\.(tsx?)$)"
        },
        "black": {
            "include": [
                "(^datahub/server/.*\\.py$)",
                "(^datahub/tests/.*\\.py$)"
            ],
            "type": "black"
        }
    }
}